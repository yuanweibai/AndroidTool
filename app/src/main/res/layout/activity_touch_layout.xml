<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <rango.tool.androidtool.touch.TestTouchLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFC107" />

    <rango.tool.androidtool.touch.OutterTouchLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D51A1A"
        android:padding="30dp">

        <rango.tool.androidtool.touch.TouchLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#86f1d2">

            <rango.tool.androidtool.touch.MyImageView
                android:id="@+id/image_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#e48282" />
        </rango.tool.androidtool.touch.TouchLayout>

    </rango.tool.androidtool.touch.OutterTouchLayout>


</RelativeLayout>