<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/sequenceBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="串行执行"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sequenceMsgText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FF5722"
        android:padding="16dp"
        android:text="加载前......"
        android:textColor="#fff"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/sequenceBtn" />

    <Button
        android:id="@+id/parallelBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="并行执行"
        app:layout_constraintTop_toBottomOf="@id/sequenceMsgText" />

    <TextView
        android:id="@+id/parallelMsgText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FF9800"
        android:padding="16dp"
        android:text="加载前......"
        android:textColor="#fff"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/parallelBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>