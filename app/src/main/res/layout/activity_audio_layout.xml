<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/get_permission_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="获取权限"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/start_record_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="开始录音"
        app:layout_constraintTop_toBottomOf="@id/get_permission_btn" />

    <Button
        android:id="@+id/stop_record_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="停止录音"
        app:layout_constraintTop_toBottomOf="@id/start_record_btn" />

    <Button
        android:id="@+id/play_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="播放录音"
        app:layout_constraintTop_toBottomOf="@id/stop_record_btn" />

</android.support.constraint.ConstraintLayout>