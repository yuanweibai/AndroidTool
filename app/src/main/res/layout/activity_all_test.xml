<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F44336">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/motionBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MotionLayout"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bezierBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="贝塞尔曲线"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/kotlinTestBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kotlin test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/coroutinesBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coroutines"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/customViewBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义View"
            android:textAllCaps="false" />

    </LinearLayout>


</ScrollView>